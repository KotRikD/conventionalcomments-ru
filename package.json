{
  "private": true,
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "autoprefixer": "^9.7.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "tailwindcss": "2.1.2"
  },
  "scripts": {
    "build": "run-s build:js build:hugo",
    "start": "run-p dev:js dev:hugo",
    "dev:hugo": "hugo serve",
    "build:hugo": "hugo",
    "build:js": "parcel build ./src/js/index.js --out-dir ./assets/out/ --no-cache",
    "dev:js": "parcel watch ./src/js/index.js --out-dir ./assets/out/ --no-cache",
    "clean": "rm -rf assets/out public resources/_gen"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
