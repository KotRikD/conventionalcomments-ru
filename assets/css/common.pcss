body {
  @apply font-sans text-gray-700;
}

a:hover {
  @apply underline;
}

pre {
  overflow-x: auto;
}

code {
  @apply text-sm text-pink-500 bg-gray-200 px-1;

  pre & {
    @apply text-gray-700 bg-transparent px-0;
  }
}

.cc-header {
  @apply mb-2;
  @apply font-medium;
}

.cc-header-with-border {
  @apply cc-header border-b-2 border-gray-100;
}

.cc-link {
  @apply text-purple-600;

  &:hover {
    @apply underline;
  }
}

.w-1em { width: 1em; }
.h-1em { height: 1em; }
.s-3 { @apply inline-block w-3 h-3; }
.s-4 { @apply inline-block w-4 h-4; }
.s-6 { @apply inline-block w-6 h-6; } 

.svg-link {
  @apply s-6;

  &:hover {
    @apply text-purple-500;
  }
}