.cc-header {
  @apply mb-2;
  @apply font-medium;
}

.cc-content {
  @apply font-light;

  h1 {
    @apply cc-header mt-6 text-xl border-b;
  }

  h2 {
    @apply cc-header mt-4 text-xl;
  }

  h3 {
    @apply cc-header mt-4 text-lg;
  }

  pre {
    @apply bg-gray-200 px-2 py-4;
  }

  strong {
    @apply font-bold;
  }

  p {
    @apply my-2;
  }

  ul {
    @apply ml-4 list-disc list-inside;
  }
}
