/* The switch - the box around the slider */
.cc-dark-mode-switch {
  position: relative;
  display: inline-block;
  @apply py-1 w-12 h-6;
}

/* Hide default HTML checkbox */
.cc-dark-mode-switch input {
  opacity: 0;
  width: 0;
  height: 0;
}

/* The slider */
.cc-dark-mode-slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #eeeeee;
  -webkit-transition: 0.4s;
  transition: 0.4s;
}

.cc-dark-mode-slider:before {
  position: absolute;
  content: "";
  @apply py-1 w-5 h-5;
  left: 2px;
  bottom: 2px;
  background-color: white;
  -webkit-transition: 0.4s;
  transition: 0.4s;
}

input:checked + .cc-dark-mode-slider {
  background-color: #6b46c1;
}

input:focus + .cc-dark-mode-slider {
  box-shadow: 0 0 4px #6b46c1;
}

input:checked + .cc-dark-mode-slider:before {
  -webkit-transform: translateX(23px);
  -ms-transform: translateX(23px);
  transform: translateX(23px);
}

/* Rounded sliders */
.cc-dark-mode-slider.cc-dark-mode-round {
  border-radius: 34px;
}

.cc-dark-mode-slider.cc-dark-mode-round:before {
  border-radius: 50%;
}
